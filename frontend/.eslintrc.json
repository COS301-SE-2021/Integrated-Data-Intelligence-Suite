{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "ignorePatterns": [
    "src/app/tests", "src/app/Mocks", "src/app/resources", "src/app/components/MapCard/leaflet/"
  ],
  "rules": {
    "no-undef": [
      "off"
    ],
    "no-underscore-dangle": [
      "off"
    ],
    "no-shadow": [
      "off"
    ],
    "no-sequences": "off",
    "no-multi-assign": "off",
    "indent": ["error", "tab"],
    "no-tabs": "off",
    "react/jsx-indent": [2, "tab"]
  }
}
